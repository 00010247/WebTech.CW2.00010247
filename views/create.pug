extends layout.pug

block content
    .container
        h1 Create blog

        if error
            p.error Some error occured! Try again!

        if success
            p.success Blog is successfully added :)

        form.form(action="create" method="POST")
            label Title
            input.input(type="text" name='title')

            label Body
            textarea.input(type="text" name="body")

            button.btn Create blog
